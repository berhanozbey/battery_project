<Window x:Class="BatteryVisualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="http://livecharts.com"
        Title="Battery Visualizer" Height="450" Width="800">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Başlık -->
        <TextBlock Text="🔋 Battery Data Visualization"
                   FontSize="20" FontWeight="Bold"
                   Margin="0 0 0 12"/>

        <!-- Capacity vs Cycle -->
        <lvc:CartesianChart Grid.Row="1"
                            Series="{Binding CapacitySeries}"
                            XAxes="{Binding CapacityXAxes}"
                            YAxes="{Binding CapacityYAxes}"/>

        <!-- SOH vs Cycle -->
        <lvc:CartesianChart Grid.Row="2"
                            Series="{Binding SOHSeries}"
                            XAxes="{Binding SOHXAxes}"
                            YAxes="{Binding SOHYAxes}"/>
    </Grid>
</Window>
